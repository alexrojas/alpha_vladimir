
<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col-xs-12'>
      <%= form_for @user do |f|  %>

      <div class="form-group">
        <div>
          <%= f.label :username, class: "col-sm-2 control-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div>
            <%= f.label :email, class: "col-sm-2 control-label" %>
        </div>
        <div class="col-sm-10">
            <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter Email", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div>
            <%= f.label :password, class: "col-sm-2 control-label" %>
        </div>
        <div class="col-sm-10">
            <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Enter Password", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@user.new_record? ? "Signup" : "Update Account", class: "btn btn-primary btn-block") %>
        </div>
      </div>

    <% end  %>
<div class="col-xs-8 col-xs-offset-8 linkback">
  <%= link_to '[ Cancel request and return to Articles Listing ]', articles_path %>
</div>

  </div>
</div>
