
<h2 align="center">Title: <%= @article.title  %></h2>
<div class="well">
    <h4 align="center"><strong>Description</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>
  <div class="article-actions ">

    <%= link_to 'Edit This Article', edit_article_path(@article), class: "btn btn-xs btn-primary style1" %>

    <%= link_to 'Create New Article', new_article_path(@article), class: "btn btn-xs btn-warning" %>

    <%= link_to 'Show all Articles', articles_path, class:"btn btn-xs btn-success" %>
  </div>
</div>
